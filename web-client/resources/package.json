{
  "name": "webpp-flux",
  "version": "0.0.1",
  "main": "public/js/app.js",
  "dependencies": {
    "es6-promise": "~0.1.1",
    "react": "~0.10"
  },
  "devDependencies": {
    "browserify": "~2.36.0",
    "envify": "~1.2.0",
    "reactify": "~0.4.0",
    "statics": "~0.1.0",
    "uglify-js": "~2.4.13",
    "watchify": "~0.4.1",
    "jest-cli": "~0.1.5"
  },
  "scripts": {
    "start": "STATIC_ROOT=./public watchify -o public/js/bundle.js -v -d .",
    "build": "STATIC_ROOT=./public NODE_ENV=production browserify . | uglifyjs -cm > public/js/bundle.min.js",
    "collect-static": "collect-static . ./public",
    "test": "jest"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./public/js"
  }
}
